<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/redDark</item>
        <item name="colorAccent">@color/redDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorSecondary">@color/superWhite</item>

    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@android:color/white</item>
    </style>

    <style name="ToolbarTheme" >
        <item name="android:background">@color/red</item>
    </style>
    
    <style name="confirm_button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/confirm_btn</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="confirm_button_standard" parent="confirm_button">
        <item name="android:width">@dimen/standard_btn_width_visible</item>
        <item name="android:height">@dimen/standard_btn_height_visible</item>
    </style>

    <style name="confirm_button_standard_bordered" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/superWhite</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:width">@dimen/standard_width_btn</item>
        <item name="android:height">@dimen/standard_height_btn</item>
        <item name="android:background">@drawable/button_border</item>
    </style>

    <style name="rewizorText">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="publicationItemTitle" parent="rewizorText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/superWhite</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16sp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="publicationItemActionsCounter" parent="rewizorText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/semi_transparent_black</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:minWidth">24dp</item>
    </style>

    <style name="publicationItemDescription" parent="rewizorText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fullBlack</item>
    </style>

    <style name="menu_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>



</resources>
